{
  "name": "@yanhao98/build-and-zip",
  "description": "A simple CLI tool to build and zip a project",
  "version": "0.0.1",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build ./index.ts --outfile ./index.js --target node --external yargs --external archiver",
    "build:watch": "bun run build -- --watch"
  },
  "files": [
    "index.js"
  ],
  "bin": {
    "build-and-zip": "index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yanhao98/build-and-zip.git"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/bun": "latest",
    "@types/yargs": "^17.0.32",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "yargs": "^17.7.2"
  },
  "publishConfig": {
    "access": "public"
  }
}